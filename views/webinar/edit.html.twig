{% extends 'ag_base/backend.html.twig' %}

{% block container %}

    <div class="wrapper row-offcanvas row-offcanvas-left">

        {% include 'menu.html.twig' with {'option': 'webinar_edit'} %}

        <!-- Right side column. Contains the navbar and content of the page -->
        <aside class="right-side">                
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    Edit Webinar {{ id }}
                </h1>
            </section>

            <!-- Main content -->
            <section class="content">

                {% include 'ag_alerts.html.twig' %}

                <div class="row">
                    <div class="col-md-6">

                        {{ form_start(form, {'method': 'POST'}) }}
                            {{ form_errors(form) }}

                            <div class="box box-info">
                                <div class="box-header">
                                    <h3 class="box-title"></h3>
                                </div><!-- /.box-header -->
                                <div class="box-body">

									<div class='form-group'>
									    {{ form_label(form.w_name) }} <span style="color:red">*</span>
									    {{ form_widget(form.w_name, { attr: { 'class': 'form-control' }}) }}
									</div>

									<div class='form-group'>
									    {{ form_label(form.w_presenter_name) }} <span style="color:red">*</span>
									    {{ form_widget(form.w_presenter_name, { attr: { 'class': 'form-control' }}) }}
									</div>

									<div class='form-group'>
                                        {{ form_label(form.w_intro_video) }}
                                        <br><samll > This video is youtube url of Thanks Video.  Play after user successfully register for seminar</small>

                                        {{ form_widget(form.w_intro_video, { attr: { 'class': 'form-control', 'style': 'width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;' }}) }}
                                    </div>

                                    <div class='form-group'>
                                        {{ form_label(form.w_webinar_video) }} <span style="color:red">*</span>
                                        <br><samll > This video is youtube url of Webinar Video. Play at shedule time only</small>

                                        {{ form_widget(form.w_webinar_video, { attr: { 'class': 'form-control', 'style': 'width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;' }}) }}
                                    </div>

                                    <div class='form-group'>
                                        {{ form_label(form.w_thanks_video) }}
                                        <br><samll > This video is youtube url of Thanks Video.  Play after user successfully register for seminar</small>

                                        {{ form_widget(form.w_thanks_video, { attr: { 'class': 'form-control', 'style': 'width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;' }}) }}
                                    </div>

									<div class='form-group'>
									    {{ form_label(form.w_introduction) }} <span style="color:red">*</span>
									    {{ form_widget(form.w_introduction, { attr: { 'class': 'form-control textarea', 'style': 'width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;' }}) }}
									</div>

									<div class='form-group'>
									    {{ form_label(form.w_sub_title) }} <span style="color:red">*</span>
									    {{ form_widget(form.w_sub_title, { attr: { 'class': 'form-control', 'style': 'width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;' }}) }}
									</div>

									<div class='form-group'>
									    {{ form_label(form.w_explaination) }} <span style="color:red">*</span>
									    {{ form_widget(form.w_explaination, { attr: { 'class': 'form-control textarea', 'style': 'width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;' }}) }}
									</div>


                                                 

                                </div><!-- /.box-body -->

                                {{ form_rest(form) }}

                                <div class="box-footer">
                                    <button type="submit" class="btn btn-primary">Edit</button>
                                </div>

                            </div><!-- /.box -->
                        {{ form_end(form) }}


                    </div>
                </div>

            </section><!-- /.content -->
        </aside><!-- /.right-side -->
    </div><!-- ./wrapper -->

{% endblock %}
